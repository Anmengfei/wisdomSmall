<wxs module="index" src="./index.wxs"></wxs>
<view class="pyg_index">
  <view class="threeTabs">
    <navigator url="/pages/addfaqi/index">
      <view class="add tab">
        <text>新增</text>
      </view>
    </navigator>
    <view class="allTab tab" bindtap="searchList">
      <text>全部</text>
    </view>
    <view class="oneTab tab" bindtap="selectWeichuli">
      <text>未处理</text>
    </view>
    <view class="twoTab tab" bindtap="selectChulizhong">
      <text>处理中</text>
    </view>
    <view class="threeTab tab" bindtap="selectFinish">
      <text>已完成</text>
    </view>
  </view>

  <view class="container">
 
  <view class='xiangqing' wx:for="{{myFaqiList}}" bindtap="navigateTo">
    
    <view class='xiangqing_info' >
      <view>
        <text class='zi' >问题描述</text><text class='title'>{{item.context}}</text>
      </view>
      <view >
        <text class='zi' >发起人</text><text class='title' >{{item.from_user}}</text>
        <text class='zi' >接受人</text><text class='title'>{{item.to_user}}</text>
        <text class='zi' >抄送人</text><text class='title'>{{item.cc_people}}</text>
      </view>
      <view >
        <text class='zi' >危险登记</text><text class='title' style="margin-right:30px;">{{index.riskConvert(item.risk_level)}}</text>
        <text class='zi' >处理状态</text><text class='title'>{{index.statusConvert(item.process_status)}}</text>
      </view>
      <view >
        <text class='zi' >检查类型</text><text class='title' style="margin-right:25px;">{{item.check_type}}</text>
        <text class='zi' >详细类型</text><text class='title'>{{item.check_type_offspring}}</text>
      </view>
      <view >
        <text class='zi' >预计结束时间</text><text class='title'>{{item.set_end_time}}</text>
      </view>
    </view>
    
  </view>
 
</view>
    

  
  
  

  

 
</view>